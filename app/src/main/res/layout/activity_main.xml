<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:background="@drawable/minions">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/near_good"
        android:id="@+id/btnNear"
        android:background="#cc1c36"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_good"
        android:id="@+id/btnCredit"
        android:background="#cc1c36"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnNear"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/btnNear"
        android:layout_alignStart="@+id/btnNear" />

</RelativeLayout>
